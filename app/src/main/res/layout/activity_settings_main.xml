<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cassendra.puzzlebuzzle.SettingsMain"
    android:background="#ff0ab7ca">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dd010512"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:id="@+id/imageView2"
            android:background="@drawable/bicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Settings"
            android:id="@+id/textView10"
            android:textColor="#ffffffff"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout2"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness"
            android:id="@+id/textView12"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="35dp"
            android:textColor="#ff000000"
            android:textSize="35dp"
            android:textStyle="bold" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brightness_bar"
            android:layout_margin="40dp"
            android:layout_below="@+id/textView12"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            android:secondaryProgress="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:id="@+id/textView13"
            android:layout_below="@+id/brightness_bar"
            android:layout_marginLeft="35dp"
            android:textColor="#ff000000"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_marginTop="45dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/volume_bar"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/brightness_bar"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            android:secondaryProgress="0"/>

    </RelativeLayout>
</RelativeLayout>
